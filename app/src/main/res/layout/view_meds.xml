<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/nombreMedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="15dp"
            android:text="Dolex"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CadaCuantasHorasDeleteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cada 8 horas"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Duracion del tratamiento"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:textColor="@color/grey"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/duracionTratamientoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:padding="15dp"
            android:text="10 Dias" />

        <TextView
            android:id="@+id/diasRestantesTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="9 Dias para terminar el tratamiento"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_marginTop="95dp"
            android:textStyle="bold" />



        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>