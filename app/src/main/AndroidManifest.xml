<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyeto.medicineapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_add"
        android:label="PillApp"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedicineApp">
        <activity android:name="com.proyeto.medicineapp.activitys.DeleteActivity"></activity>
        <activity android:name="com.proyeto.medicineapp.activitys.AddMedActivity" />
        <activity android:name="com.proyeto.medicineapp.ui.view.MainView" />
        <activity android:name="com.proyeto.medicineapp.ui.view.RegistroView" />
        <activity android:name="com.proyeto.medicineapp.ui.view.LoginView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="com.proyeto.medicineapp.activitys.ReminderBroadcast"/>
    </application>

</manifest>